<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Pacientes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <h1>Lista de Pacientes</h1>
        <a href="/pacientes/novo" class="btn btn-primary mb-3">Novo Paciente</a>
        <% if (pacientes.length === 0) { %>
            <p>Não há pacientes cadastrados.</p>
        <% } else { %>
            <table class="table">
                <thead>
                    <tr>
                        <th>CPF</th>
                        <th>Nome Completo</th>
                        <th>Idade</th>
                        <th>Dia Marcado</th>
                        <th>Hora Marcada</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% pacientes.forEach(paciente => { %>
                        <tr>
                            <td><%= paciente.CPF %></td>
                            <td><%= paciente.nomeCompleto %></td>
                            <td><%= paciente.idade %></td>
                            <td><%= new Date(paciente.diaMarcado).toLocaleDateString('pt-BR') %></td>
                            <td><%= new Date(paciente.horaMarcada).toLocaleTimeString('pt-BR') %></td>
                            <td>
                                <a href="/pacientes/editar/<%= paciente.CPF %>" class="btn btn-warning btn-sm">Editar</a>
                                <a href="/pacientes/deletar/<%= paciente.CPF %>" class="btn btn-danger btn-sm">Deletar</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
